{
  "name": "columbus-zero-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Columbus Zero travel AI platform",
  "bin": {
    "infrastructure": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:staging": "cdk deploy --all --require-approval never --context environment=staging",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "destroy": "cdk destroy --all"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.114.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.114.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1"
  }
}
